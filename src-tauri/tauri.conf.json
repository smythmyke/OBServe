{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OBServe",
  "version": "0.1.0",
  "identifier": "com.observe.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OBServe",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/vst/*.dll",
      "resources/vst/AIRWINDOWS_LICENSE.txt"
    ]
  }
}
